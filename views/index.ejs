<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<!-- For Mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Sock It! | Socket.io Chat!</title>
	<!-- Fav Icon -->
	<!--[if IE]><link rel="shortcut icon" href="images/fav.png"><![endif]-->
	<link rel="icon" href="images/fav.png">
	<!-- Custom Stylesheet -->
	<link rel="stylesheet" href="style.css">
	<!-- United Theme -->
	<link rel="stylesheet" href="bootstrap-united.min.css">
	<!-- Font Awesome -->
	<script src="https://use.fontawesome.com/f71bf44879.js"></script>
	<!-- Popper -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
	<!-- jQuery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<!-- Socket.io File -->
	<script src="/socket.io/socket.io.js"></script>
	<!-- Primary JS  -->
	<script src="main.js"></script>
</head>
<body>
	<!-- Begin Primary Container -->
	<div class="container-fluid">
	    <!-- Welcome Responsive Row -->
	    <div class="row-fluid header">
	        <div class="col-md-6">
				<h1><i class="fa fa-superpowers" aria-hidden="true"></i> Sock It! <small>Chat using sockets.</small></h1>
			</div>
	        <div class="col-md-6">
				<a class="btn btn-info btn-lg portfolio" id="portfolio-link"><i class="fa fa-external-link-square"></i> By Tim Knab</a>
			</div>
			<hr>
		</div>
		<!-- Online User's Row and Chat Log Row -->
		<div class="row-fluid full-height">
			<!-- Users -->
			<div class="col-md-3 online-users">
				<div id="peopleOnline" class="text-center margin-bottom-sm"></div>
			</div>
			<!-- Chat Log -->
			<div class="col-md-9" id="chat-wrapper">
				<div id="chat"></div>
			</div>
		</div>
		<!-- Chat Textarea -->
		<div class="row-fluid">
			<div class="col-md-12">
				<div class="form-group margin-top-sm">
					<form action="">
						<div class="form-group">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-comment" aria-hidden="true"></i></span>
								<input type="text" name="chatMsg" class="form-control input-lg" id="chatMsg">
							</div>
						</div>
						<button type="submit" class="btn btn-primary btn-block margin-top-sm"><h4><i class="fa fa-send" aria-hidden="true"></i> Send</h4></button>
					</form>
					<h4 class="chatting-as"><i class="fa fa-user-circle-o" aria-hidden="true"></i> <em>Chatting as: <span id="name"></span></em></h4>
				</div>
			</div>
		</div>
	</div> <!-- End Container -->
</body>
</html>
